pkgname=walker
version=2.8.0
revision=1
build_style=cargo
hostmakedepends="cargo pkg-config gobject-introspection protobuf"
makedepends="gtk4-layer-shell-devel poppler-glib-devel cairo-devel"
depends="elephant"
short_desc="Wayland application runner"
maintainer="ItsLemmy <studio@quadbyte.net>"
license="GPL-3.0-or-later"
homepage="https://github.com/abenz1267/walker"
distfiles="${homepage}/archive/refs/tags/v${version}.tar.gz"
checksum=75667df7bb05180ff83b3768711f107b7003fa329bb6a5b88cecea1da12dbf1c

post_install() {
    # Install license
    vlicense LICENSE
    
    # Install configuration files
    vmkdir etc/xdg/walker
    vcopy resources/config.toml etc/xdg/walker/
    
    # Install theme files
    vmkdir etc/xdg/walker/themes/default
    vcopy "resources/themes/default/*.xml" etc/xdg/walker/themes/default/
    vcopy resources/themes/default/style.css etc/xdg/walker/themes/default/
}
